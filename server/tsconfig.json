{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2024"],
    "module": "nodenext",
    "target": "es2024",
    "strict": true,
    "baseUrl": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext", // Melhor alinhar com o module
    
    // MUDANÇAS AQUI:
    "outDir": "./dist",             // Onde os arquivos .js vão ficar
    "noEmit": false,
    "declaration": true,            // Opcional para backend, util para libs
    "emitDeclarationOnly": false,   // Precisamos dos .js!
    "allowImportingTsExtensions": false, // Node nativo prefere imports .js
    
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}